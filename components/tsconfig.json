{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "allowJs": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "./types",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "useDefineForClassFields": false,
    "experimentalDecorators": true,

    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["**/*.js"],

  "exclude": [
    "node_modules/**/*",
    "types/**/*",
    "**/*.stories.js",
    "**/*.test.js",
    "**/*.spec.js",
    "vitest.*.js",
    "eslint.config.js"
  ]
}
